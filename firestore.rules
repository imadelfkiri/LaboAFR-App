
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to all collections for any signed-in user.
    // This is a basic rule, you might want to restrict access further
    // based on user roles or specific document data in a production environment.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
