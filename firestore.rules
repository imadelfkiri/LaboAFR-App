rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
    }
    
    // Allow write access only to specific collections for authenticated users
    match /resultats/{resultId} {
        allow write: if request.auth != null;
    }
    match /fuel_types/{fuelTypeId} {
        allow write: if request.auth != null;
    }
    match /fuel_supplier_map/{mapId} {
        allow write: if request.auth != null;
    }
    match /specifications/{specId} {
        allow write: if request.auth != null;
    }
    match /sessions_melange/{sessionId} {
        allow write: if request.auth != null;
    }
    match /fuel_costs/{costId} {
        allow write: if request.auth != null;
    }
    match /stocks/{stockId} {
        allow write: if request.auth != null;
    }
    match /arrivages/{arrivageId} {
        allow write: if request.auth != null;
    }
    match /donnees_combustibles/{dataId} {
        allow write: if request.auth != null;
    }
    match /scenarios_melange/{scenarioId} {
        allow write: if request.auth != null;
    }
  }
}
