rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to most collections for authenticated users
    // This is a very permissive rule for development.
    // Consider tightening security for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Add specific rule for scenarios_melange collection
    match /scenarios_melange/{scenarioId} {
      allow read, write: if request.auth != null;
    }
  }
}
