
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règle par défaut : refuser toutes les lectures/écritures
    match /{document=**} {
      allow read, write: if false;
    }

    // Règle spécifique pour autoriser la lecture publique de la collection 'resultats'
    match /resultats/{resultatId} {
      allow read: if true;
      allow write: if false; // L'écriture reste protégée
    }

    // Règles pour les autres collections nécessaires à l'application
    match /fuel_types/{docId} {
      allow read: if true;
    }
    match /specifications/{docId} {
      allow read: if true;
    }
    match /fuel_supplier_map/{docId} {
      allow read: if true;
    }
    match /sessions_melange/{docId} {
      allow read: if true;
    }
    match /fuel_costs/{docId} {
      allow read: if true;
    }
    match /stocks/{docId} {
      allow read: if true;
    }
    match /arrivages/{docId} {
      allow read: if true;
    }
  }
}
